# Telegram Bot token — get from @BotFather
BOT_TOKEN=your_telegram_bot_token

# Authorized Telegram user ID(s) — get from @userinfobot
# Single user:
AUTHORIZED_USER_ID=123456789
# Multiple users (comma-separated):
# AUTHORIZED_USER_ID=123456789,987654321,555555555

# Telegram API credentials — get from https://my.telegram.org
API_ID=your_api_id
API_HASH=your_api_hash

# Convex deployment URL — get from https://convex.dev after running: npx convex dev
CONVEX_URL=https://your-deployment.convex.cloud

# Delay in seconds between accounts when joining a channel (default: 3)
JOIN_DELAY_SECONDS=3
